{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start App",
      "type": "shell",
      "command": "python -m app",
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "Lint Code",
      "type": "shell",
      "command": "pre-commit run --all-files",
      "group": "test",
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "pytest tests/",
      "group": "test",
    }
  ]
}

